<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nota3Tri"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgall"
    tools:context="com.testemedia.mediacp2.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nota mínima 2ª certificação"
                android:id="@+id/certificacao2"
                android:background="@drawable/button_round_gray"
                android:textColor="@color/primary_dark"
                android:layout_marginTop="30dp" />

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Média anual"
                android:id="@+id/mediaAnual"
                android:background="@drawable/button_round_gray"
                android:textColor="@color/primary_dark"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nota mínima PFV"
                android:id="@+id/pvf"
                android:background="@drawable/button_round_gray"
                android:textColor="@color/primary_dark"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Média final com PFV"
                android:id="@+id/mediaFinal"
                android:background="@drawable/button_round_gray"
                android:textColor="@color/primary_dark"
                android:layout_below="@+id/mediaAnual" />

            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Como funciona?"
                android:visibility="gone"
                android:id="@+id/sobre"
                android:background="@drawable/button_round_gray"
                android:textColor="@color/primary_dark" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>