<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nota3Tri"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgall"
    tools:context="com.testemedia.mediacp2.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:text="@string/boletim"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp" />

            <Button
                android:id="@+id/boletim"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="#ffCCCCCC"
                android:text="Visualizar Boletim" />

            <Button
                android:id="@+id/cadastrar"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="#ffCCCCCC"
                android:text="@string/cadastrar" />

            <Button
                android:id="@+id/editar"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="#ffCCCCCC"
                android:text="Editar/Remover disciplina" />

            <Button
                android:id="@+id/instrucoes"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="#ffCCCCCC"
                android:text="Como utilizar" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>