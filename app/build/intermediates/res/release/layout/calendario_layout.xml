<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgall"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/calendariopadrao"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:background="#45FFFA"
        android:contentDescription="@string/calendario"
        android:src="@drawable/calendariobotaogeral" />

    <ImageButton
        android:id="@+id/calendario3"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:background="#45FFFA"
        android:layout_height="fill_parent"
        android:contentDescription="@string/calendario"
        android:src="@drawable/calendariobotaogeral2" />

    <com.matabii.dev.scaleimageview.ScaleImageView
        android:id="@+id/calendario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/calend"
        android:visibility="gone" />

