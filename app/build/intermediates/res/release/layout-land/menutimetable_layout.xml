                        android:padding="3dip"
                        android:text="Disciplina"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="1째 Tri"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="2째 Tri"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Est. 3째"
                        android:textColor="#ff888888"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="3째 Tri"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="M.A."
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="68dp"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="Est.PFV"
                        android:textColor="#ff888888"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="62dp"
                        android:gravity="center"
